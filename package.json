{
  "name": "paperbloom-digital",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "test": "vitest --run",
    "test:watch": "vitest",
    "test:constraints": "vitest --run src/lib/__tests__/database-constraints.test.ts",
    "validate:env": "ts-node --project tsconfig.node.json src/lib/validate-env.ts",
    "db:migrate": "ts-node --project tsconfig.node.json src/lib/migrations/migrate.ts up",
    "db:rollback": "ts-node --project tsconfig.node.json src/lib/migrations/migrate.ts down",
    "db:migrate:test": "ts-node --project tsconfig.node.json src/lib/migrations/test-migration.ts",
    "db:test": "ts-node --project tsconfig.node.json src/lib/test-db-connection.ts",
    "db:verify": "ts-node --project tsconfig.node.json src/lib/verify-schema.ts",
    "db:verify-constraints": "ts-node --project tsconfig.node.json src/lib/__tests__/verify-constraints.ts",
    "validate-setup": "ts-node --project tsconfig.node.json src/lib/validate-setup.ts",
    "stripe:validate": "ts-node --project tsconfig.node.json src/lib/validate-stripe-setup.ts",
    "stripe:verify": "ts-node --project tsconfig.node.json src/services/__tests__/verify-stripe-service.ts",
    "stripe:listen": "stripe listen --forward-to localhost:3000/api/checkout/webhook",
    "stripe:trigger": "stripe trigger checkout.session.completed",
    "webhook:verify": "ts-node --project tsconfig.node.json src/app/api/checkout/webhook/__tests__/verify-webhook.ts",
    "errors:verify": "ts-node --project tsconfig.node.json src/lib/__tests__/verify-error-handling.ts",
    "r2:test": "ts-node --project tsconfig.node.json src/lib/test-r2-connection.ts"
  },
  "dependencies": {
    "@aws-sdk/client-s3": "^3.709.0",
    "@radix-ui/react-label": "^2.1.8",
    "@react-email/render": "^1.0.1",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "date-fns": "^4.1.0",
    "dotenv": "^17.2.3",
    "framer-motion": "^12.23.24",
    "lucide-react": "^0.554.0",
    "next": "^14.2.35",
    "pg": "^8.16.3",
    "qrcode": "^1.5.4",
    "react": "^18",
    "react-dom": "^18",
    "resend": "^6.5.2",
    "sharp": "^0.34.5",
    "stripe": "^20.0.0",
    "tailwind-merge": "^3.4.0",
    "zod": "^4.1.12"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/node": "^20",
    "@types/pg": "^8.15.6",
    "@types/qrcode": "^1.5.6",
    "@types/react": "^18",
    "@types/react-dom": "^18",
    "@types/uuid": "^10.0.0",
    "eslint": "^8",
    "eslint-config-next": "14.2.33",
    "happy-dom": "^20.0.10",
    "jsdom": "^27.2.0",
    "postcss": "^8",
    "tailwindcss": "^3.4.1",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5",
    "uuid": "^13.0.0",
    "vitest": "^4.0.13"
  }
}
